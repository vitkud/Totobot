		[
			"w", "left wheel turns at power %n %, right wheel at power %n %",
			"runMotors", "50", "50",
			{ "inc": "", "def": "", "setup": "", "work": "totobot.runMotor(LEFT_MOTOR, {0} * 255 / 100);\ntotobot.runMotor(RIGHT_MOTOR, {1} * 255 / 100);\n", "loop": "" }
